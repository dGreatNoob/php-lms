# Production Environment Configuration
APP_ENV=production
APP_DEBUG=false
APP_NAME="PHP LMS"
BASE_URL=https://yourdomain.com

# Database Configuration
DB_HOST=db
DB_PORT=3306
DB_NAME=php_lms_prod
DB_USER=lms_prod_user
DB_PASS=production_super_secure_password_here

# File Upload Configuration
UPLOAD_MAX_SIZE=50M
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif,mp4,mp3,zip

# Session Configuration
SESSION_NAME=php_lms_prod_session
SESSION_TIMEOUT=14400

# Security Configuration
CSRF_TOKEN_NAME=csrf_token
BCRYPT_ROUNDS=12

# Email Configuration
MAIL_HOST=smtp.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=production_email_password
MAIL_FROM=noreply@yourdomain.com

# SSL Configuration
FORCE_HTTPS=true
SECURE_COOKIES=true