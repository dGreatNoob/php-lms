# Staging Environment Configuration
APP_ENV=staging
APP_DEBUG=false
APP_NAME="PHP LMS - Staging"
BASE_URL=https://staging.yourdomain.com

# Database Configuration
DB_HOST=db
DB_PORT=3306
DB_NAME=php_lms_staging
DB_USER=lms_user
DB_PASS=staging_secure_password_here

# File Upload Configuration
UPLOAD_MAX_SIZE=20M
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif,mp4,mp3

# Session Configuration
SESSION_NAME=php_lms_staging_session
SESSION_TIMEOUT=7200

# Security Configuration
CSRF_TOKEN_NAME=csrf_token
BCRYPT_ROUNDS=12

# Email Configuration
MAIL_HOST=smtp.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=staging@yourdomain.com
MAIL_PASSWORD=staging_email_password
MAIL_FROM=staging@yourdomain.com